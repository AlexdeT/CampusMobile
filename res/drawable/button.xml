<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <padding android:bottom="-2sp" android:left="-2sp" android:top="-1sp" />

            <gradient android:angle="270" android:centerColor="@color/bleue_top" android:endColor="@color/bleue_bottom" android:startColor="@color/bleue_top" android:type="linear" />

            <corners android:radius="10dp" />

            <stroke android:width="1dp" android:color="@android:color/black" />
        </shape></item>
    <item android:bottom="-2dp" android:left="-2dp" android:top="-2dp"><shape>
            <padding android:bottom="-2sp" android:left="-2sp" android:top="-1sp" />

            <gradient android:angle="270" android:centerColor="@color/bleue_top" android:endColor="@color/bleue_top" android:startColor="@color/bleue_top" android:type="linear" />

            <corners android:radius="10dp" />

            <stroke android:width="1dp" android:color="@color/bleue_bottom" />
        </shape></item>

</selector>