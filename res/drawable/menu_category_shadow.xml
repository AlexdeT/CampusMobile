<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/bleue_top"
                android:endColor="@color/bleue_bottom"
                android:startColor="@color/bleue_top"
                android:type="linear" />
        </shape>
    </item>
    <item android:top="30dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#1E1E1E"
                android:startColor="@color/bleue_top"
                android:type="linear" />
        </shape>
    </item>

</layer-list>